# 2) HTTPS: reverse proxy до Docker Nginx на 127.0.0.1:8021
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name finmap.salesjam.com.ua;

    # Шляхи до сертифікатів Let's Encrypt
    ssl_certificate     /etc/letsencrypt/live/finmap.salesjam.com.ua/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/finmap.salesjam.com.ua/privkey.pem;

    # Базові SSL налаштування
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Опційно: Gzip
    gzip on;
    gzip_comp_level 5;
    gzip_min_length 256;
    gzip_proxied any;
    gzip_vary on;
    gzip_types
        text/plain text/css application/json application/javascript application/x-javascript
        text/xml application/xml application/xml+rss application/rss+xml text/javascript
        image/svg+xml;

    # Reverse proxy до контейнера (в docker-compose порт прив’язаний як 127.0.0.1:8021:80)
    location / {
        proxy_pass http://127.0.0.1:8021;

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  https;

        proxy_connect_timeout 60s;
        proxy_send_timeout    300s;
        proxy_read_timeout    300s;

        proxy_buffering       on;
        proxy_buffers         16 32k;
        proxy_buffer_size     64k;
    }

    client_max_body_size 64m;

    # Опційно: безпекові заголовки
    # add_header X-Frame-Options "SAMEORIGIN" always;
    # add_header X-Content-Type-Options "nosniff" always;
    # add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    # add_header X-XSS-Protection "1; mode=block" always;
}